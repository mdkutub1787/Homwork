<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pagebg2"
    tools:context=".UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pagebg2"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Data"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/nibm_blue"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/uploadImage"
                android:src="@drawable/upload"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/stdRegNo"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:inputType="numberDecimal"
                android:hint="Enter Register Number"
                android:gravity="start|center_vertical"
                android:textColor="@color/nibm_blue"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/stdName"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Enter Student Name"
                android:gravity="start|center_vertical"
                android:textColor="@color/nibm_blue"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/stdAge"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:inputType="number"
                android:hint="Enter Student Age"
                android:gravity="start|center_vertical"
                android:textColor="@color/nibm_blue"
                />

            <RadioGroup
                android:id="@+id/genderGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Male"
                    android:textColor="@color/nibm_blue"
                    android:padding="10dp"
                    android:gravity="center_vertical" />

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Female"
                    android:textColor="@color/nibm_blue"
                    android:padding="10dp"
                    android:gravity="center_vertical" />
            </RadioGroup>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/stdMobNo"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Contact Number"
                android:inputType="number"
                android:gravity="start|center_vertical"
                android:textColor="@color/nibm_blue"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/stdParentNo"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:inputType="number"
                android:hint="Parent Contact Number"
                android:gravity="start|center_vertical"
                android:textColor="@color/nibm_blue"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Save"
                android:id="@+id/saveButton"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</ScrollView>